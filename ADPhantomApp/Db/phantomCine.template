### Cine Name

record(waveform, "$(P)$(R)C$(CINE):Name_RBV")
{
  field(DESC, "Cine $(CINE) name")
  field(DTYP, "asynOctetRead")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))PHANTOM_C$(CINE)_NAME")
  field(FTVL, "CHAR")
  field(NELM, "1000")
  field(SCAN, "I/O Intr")
}

