#!/bin/sh
TOP="$(cd $(dirname "$0")/../..; pwd)"

# first load the paths. These have been generated from the configure/RELEASE
# tree. If we have a -d arg then load the opi/edl paths first
shopt -s nullglob
unset EDMDATAFILES
if [ "$1" = "-d" ]; then
    for d in ${TOP}/*App/opi/edl; do
        EDMDATAFILES="${EDMDATAFILES}${d}:"
    done
    EDMDATAFILES="${EDMDATAFILES}${TOP}/data:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.3/support/adUtil/2-7/adUtilApp/opi/edl:"

    OPTS="-x -eolc"
else
    OPTS="-x -eolc -noedit"
fi
EDMDATAFILES="${EDMDATAFILES}${TOP}/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/ADCore/2-4dls1/data"
EDMDATAFILES="${EDMDATAFILES}:/home/gnx91527/work/epics/phantom/phantomCamera/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/ADExample/2-0-1dls1/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/adUtil/2-7/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/ffmpegServer/3-0dls0-6/data"

export EDMDATAFILES

# Set the path to include any scripts in data dirs
export PATH=${EDMDATAFILES}:${PATH}
edm ${OPTS}  CAM.edl
